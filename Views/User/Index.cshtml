@using ViewModels
@model List<UserRegistrationViewModel>

<h1>Index view</h1>

<table class="table tbl-primary">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Firs tName</th>
            <th>Last Name</th>
            <th>GenderId</th>
            <th>MobileNubmer</th>
            <th>AdharNumber</th>
            <th>Category</th>
             <th>Delete</th>
        </tr>
    </thead>

    <tbody>

        @{
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.GenderName</td>
                    <td>@user.MobileNumber</td>
                    <td>@user.AdharNumber</td>
                    <td>@user.Category</td>
                    <td><a  asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" onclick = "return confirm('Are you sure you wish to delete this User?');">Delete</a></td>
                    <td><a  asp-controller="User" asp-action="Update" asp-route-id="@user.Id">Update</a></td>


                </tr>
            }
        }

    </tbody>
</table>